{
  "name": "react-native-ssl-manager",
  "version": "1.0.0",
  "description": "React Native SSL Pinning provides seamless SSL certificate pinning integration for enhanced network security in React Native apps. This module enables developers to easily implement and manage certificate pinning, protecting applications against man-in-the-middle (MITM) attacks. With dynamic configuration options and the ability to toggle SSL pinning, it's particularly useful for development and testing scenarios.",
  "main": "src/index.tsx",
  "types": "src/UseSslPinning.types.ts",
  "react-native": {
    "android": {
      "source": "android/src/main/java/com/usesslpinning/cli/UseSslPinningPackage.kt"
    },
    "ios": {
      "podspec": "react-native-ssl-manager.podspec"
    }
  },
  "source": "src/index",
  "files": [
    "lib",
    "src",
    "build",
    "android",
    "ios",
    "plugin",
    "*.podspec",
    "react-native-ssl-manager.podspec",
    "expo-module.config.json",
    "react-native.config.js",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!example",
    "!example-expo",
    "!**/.*"
  ],
  "scripts": {
    "build": "tsc && babel src --out-dir lib --extensions .ts,.tsx,.js,.jsx",
    "clean": "expo-module clean",
    "lint": "expo-module lint",
    "test": "expo-module test",
    "typecheck": "tsc --noEmit",
    "release": "release-it",
    "build:all": "./scripts/build.sh",
    "build:examples": "./scripts/build.sh --with-examples",
    "example:install": "cd example && yarn install",
    "example:ios": "cd example && npx react-native run-ios",
    "example:android": "cd example && npx react-native run-android",
    "example-expo:install": "cd example-expo && yarn install",
    "example-expo:ios": "cd example-expo && npx expo run:ios",
    "example-expo:android": "cd example-expo && npx expo run:android",
    "example-expo:start": "cd example-expo && npx expo start"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huytdps13400/react-native-ssl-manager.git"
  },
  "author": "Trần Đình Huy <kingonwork@gmail.com> (https://github.com/huytdps13400)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huytdps13400/react-native-ssl-manager/issues"
  },
  "homepage": "https://github.com/huytdps13400/react-native-ssl-manager#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/example-expo/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example/",
    "example-expo/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "dependencies": {
    "postinstall": "^0.10.3"
  },
  "yalcSig": "b64e003348319fa6ba61ea2c2c825f1e"
}
